<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Buttons -->
    <!--Login buttons-->
    <style name="MyUIButton" parent="Base.Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/White</item>
    </style>
    <!--start service button-->
    <style name="MyUIButton2" parent="Base.Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/PaleGreen</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/Black</item>
    </style>
    <!--stop service button-->
    <style name="MyUIButton3" parent="Base.Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/DarkRed</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@color/White</item>
    </style>

</resources>
